/* Popup Container */
.popup-content {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    width: 100%;
    max-width: 100%;
    padding: 0;
    box-sizing: border-box;
    overflow: hidden;
}

/* Title */
.popup-title {
    margin: 0;
    padding: 16px 50px 16px 20px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    font-size: 18px;
    font-weight: 600;
    border-radius: 12px 12px 0 0;
    text-align: center;
    position: relative;
}

/* Data Item Container */
.data-item {
    border-bottom: 1px solid #e9ecef;
    transition: background-color 0.2s ease;
}

.data-item:last-child {
    border-bottom: none;
}

/* Highlighted data item (when viewing that layer) */
.data-item.highlighted {
    background: linear-gradient(135deg, #e3f2fd 0%, #f3e5f5 100%);
    border-left: 4px solid #667eea;
    border-right: 4px solid #764ba2;
    position: relative;
    margin: 8px 0;
    border-radius: 8px;
}

.data-item.highlighted:first-of-type {
    margin-top: 12px;
}

.data-item.highlighted .data-row {
    padding: 16px 20px;
}

.data-item.highlighted .data-label {
    color: #667eea;
    font-weight: 700;
}

.data-item.highlighted .data-value {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    font-weight: 600;
    box-shadow: 0 2px 6px rgba(102, 126, 234, 0.3);
}

/* Data Rows */
.data-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 14px 20px;
    transition: background-color 0.2s ease;
    position: relative;
}

.data-row:hover {
    background-color: #f8f9fa;
}

/* pH Summary Row - Clickable */
.ph-summary {
    cursor: pointer;
    background-color: #fff;
    position: relative;
}

.ph-summary:hover {
    background-color: #e3f2fd;
}

/* Labels and Values */
.data-label {
    font-weight: 600;
    color: #495057;
    font-size: 14px;
    flex: 1;
}

.data-value {
    font-weight: 500;
    color: #212529;
    font-size: 14px;
    background-color: #e7f3ff;
    padding: 4px 10px;
    border-radius: 6px;
    min-width: 50px;
    width: 50px;
    text-align: center;
    margin-right: 30px;
}

/* Dropdown Arrow */
.dropdown-arrow {
    position: absolute;
    right: 15px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 14px;
    color: #667eea;
    transition: transform 0.3s ease;
    font-weight: bold;
}

/* pH Details Section */
.ph-details {
    background-color: #f8f9fa;
    padding: 8px 20px 12px 20px;
    border-top: 1px solid #dee2e6;
    animation: slideDown 0.3s ease;
}

@keyframes slideDown {
    from {
        opacity: 0;
        max-height: 0;
    }
    to {
        opacity: 1;
        max-height: 200px;
    }
}

/* Detail Items */
.detail-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 8px 12px;
    margin: 6px 0;
    background-color: white;
    border-radius: 6px;
    border-left: 3px solid #667eea;
}

.detail-label {
    font-size: 13px;
    color: #6c757d;
    font-weight: 500;
}

.detail-value {
    font-size: 13px;
    color: #212529;
    font-weight: 600;
    text-align: right;
    max-width: 60%;
}

/* Leaflet Popup Adjustments */
.leaflet-popup-content-wrapper {
    padding: 0 !important;
    border-radius: 12px !important;
    overflow: hidden !important;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15) !important;
}

.leaflet-popup-content {
    margin: 0 !important;
    width: 300px !important;
    max-width: 300px !important;
}

.leaflet-container a.leaflet-popup-close-button {
    width: 32px !important;
    height: 32px !important;
}

.leaflet-popup {
    margin-bottom: 20px !important;
}

.leaflet-popup-tip-container {
    display: none;
}

/* Close Button Styling */
.leaflet-popup-close-button {
    position: absolute !important;
    top: 8px !important;
    right: 8px !important;
    width: 32px !important;
    height: 32px !important;
    padding: 0 !important;
    margin: 0 !important;
    color: white !important;
    font-size: 28px !important;
    font-weight: 400 !important;
    line-height: 32px !important;
    text-align: center !important;
    text-decoration: none !important;
    background-color: rgba(255, 255, 255, 0.25) !important;
    border-radius: 50% !important;
    border: 2px solid rgba(255, 255, 255, 0.4) !important;
    transition: all 0.2s ease !important;
    z-index: 1000 !important;
    opacity: 1 !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
}

.leaflet-popup-close-button span {
    color: white !important;
    opacity: 1 !important;
}

.leaflet-popup-close-button:hover {
    background-color: rgba(255, 255, 255, 0.4) !important;
    transform: scale(1.1) !important;
    border-color: rgba(255, 255, 255, 0.6) !important;
}

.leaflet-popup-close-button:active {
    transform: scale(0.95) !important;
}

/* Layer Control Panel */
.layer-control {
    background: white !important;
    border: 3px solid #667eea !important;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5) !important;
    padding: 16px;
    min-width: 220px;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    z-index: 9999 !important;
    position: relative;
    margin-left: 10px !important;
    margin-bottom: 10px !important;
}

.leaflet-bottom.leaflet-left {
    z-index: 9999 !important;
    pointer-events: auto !important;
}

.leaflet-bottom.leaflet-left .leaflet-control {
    margin: 0 0 10px 10px !important;
    clear: both;
}

/* Move attribution to bottom right to avoid overlap */
.leaflet-control-attribution {
    position: absolute;
    bottom: 0;
    right: 0;
    left: auto !important;
}

.layer-control-title {
    font-size: 14px;
    font-weight: 700;
    color: #495057;
    margin-bottom: 12px;
    text-align: center;
    padding-bottom: 10px;
    border-bottom: 2px solid #e9ecef;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.layer-btn {
    display: flex;
    align-items: center;
    width: 100%;
    padding: 12px 14px;
    margin: 8px 0;
    background: white;
    border: 2px solid #e9ecef;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-size: 13px;
    font-weight: 500;
    color: #495057;
}

.layer-btn:hover {
    background: linear-gradient(135deg, #e3f2fd 0%, #f3e5f5 100%);
    border-color: #667eea;
    transform: translateX(4px);
    box-shadow: 0 2px 8px rgba(102, 126, 234, 0.2);
}

.layer-btn.active {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-color: #667eea;
    color: white;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
}

.layer-legend {
    margin-top: 12px;
    padding-top: 12px;
    border-top: 2px solid #e9ecef;
}

.legend-title {
    font-size: 12px;
    font-weight: 600;
    color: #495057;
    margin-bottom: 8px;
}

.legend-item {
    display: flex;
    align-items: center;
    font-size: 11px;
    color: #6c757d;
    margin: 4px 0;
}

.legend-color {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    margin-right: 8px;
    border: 1px solid #dee2e6;
}

/* Smooth interpolation tiles */
.leaflet-tile {
    image-rendering: auto;
    image-rendering: -webkit-optimize-contrast;
    image-rendering: crisp-edges;
}

canvas.leaflet-tile {
    image-rendering: auto !important;
}

.btn-icon {
    font-size: 18px;
    margin-right: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 24px;
    color: #667eea;
}

.btn-icon i {
    font-size: 16px;
}

.layer-btn.active .btn-icon {
    color: white;
}

.btn-label {
    flex: 1;
    text-align: left;
}

.heatmap-btn.active .btn-icon {
    filter: brightness(0) invert(1);
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .heatmap-control {
        min-width: 180px;
        padding: 12px;
    }
    
    .heatmap-btn {
        padding: 10px 12px;
        font-size: 12px;
    }
    
    .btn-icon {
        font-size: 16px;
        margin-right: 8px;
    }
}